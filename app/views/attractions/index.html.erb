<div class="row mt-4">
  <div class="col">
    <h3>All Attractions</h3>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<% if current_user.user_type == "ADMIN" %>

<div class="row">
  <div class="col">
    <%= link_to "new attraction", new_attraction_path %>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<% end %>

<div class="row">
  <div class="col">
    <ul>
      <% @attractions.each do |attraction| %>
        <li>
          <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
          <% if current_user.user_type == "ADMIN" %> - <%= link_to "edit", edit_attraction_path(attraction) %> - <%= link_to "delete", attraction, method: :delete, data: { confirm: "Are you sure?" } %><% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>